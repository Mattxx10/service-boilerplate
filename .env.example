# Database
DATABASE_URL="postgresql://user:password@localhost:5432/pozial?schema=public"

# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info

# BFF Authentication (REQUIRED)
# Generate with: openssl rand -hex 32
# CRITICAL: Must match the secret in your Next.js BFF
BFF_SERVICE_SECRET=your-secure-random-secret-here-use-at-least-32-bytes

# CORS Configuration
CORS_ORIGIN=http://localhost:3001

# AWS Cognito (Optional - for reference, used in Next.js BFF)
# COGNITO_USER_POOL_ID=us-east-1_xxxxx
# COGNITO_CLIENT_ID=xxxxx
# COGNITO_REGION=us-east-1

